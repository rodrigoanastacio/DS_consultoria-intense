    <mask id="mask0_203_6" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="0" y="-1" width="264" height="274">
    <rect x="1" width="262" height="272" rx="10" fill="#121214" stroke="#EEEDE8" stroke-opacity="0.1"/>
    </mask>
    <g mask="url(#mask0_203_6)">
    <rect x="31.4886" y="4" width="261" height="225" transform="rotate(28.8273 31.4886 4)" fill="url(#paint0_linear_203_6)" fill-opacity="0.3"/>
    <rect x="1.48859" y="14" width="261" height="225" transform="rotate(28.8273 1.48859 14)" fill="url(#paint1_linear_203_6)"/>
