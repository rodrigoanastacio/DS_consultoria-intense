    </mask>
    <g mask="url(#mask0_203_8)">
    <rect x="229.511" y="267" width="261" height="225" transform="rotate(-151.173 229.511 267)" fill="url(#paint0_linear_203_8)" fill-opacity="0.3"/>
    <rect x="259.511" y="257" width="261" height="225" transform="rotate(-151.173 259.511 257)" fill="url(#paint1_linear_203_8)"/>
    </g>
