    <stop offset="1" stop-color="#9A9292" stop-opacity="0"/>
    </linearGradient>
    <linearGradient id="paint1_linear_203_6" x1="308.583" y1="-12.9063" x2="61.4407" y2="120.832" gradientUnits="userSpaceOnUse">
    <stop stop-color="#9A9292" stop-opacity="0.1"/>
    <stop offset="1" stop-color="#9A9292" stop-opacity="0"/>
